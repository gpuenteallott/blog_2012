<!DOCTYPE html>
<html lang="es">
<head>
   <meta charset="utf-8">
   
   <title>CORE</title>

   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <meta name="description" content="Proyecto Blog de CORE">
   <meta name="author" content="Santiago Pavón">

   <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
   <link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.min.css">

   <script src="http://code.jquery.com/jquery.min.js"></script>
   <script src="/js/bootstrap.min.js"></script>

   <script src="/js/misc.js"></script>
</head>

<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">

          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          
          <h1><span><a class="brand" href="/">HackathonReviews.herokuapp.com</a></span></h1>
          

          <div class="btn-group pull-right">
            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="icon-user"></i> 
                <% if (session.user) { %>
                  <%= session.user.name %>       
                <% } else { %>
                  Entrar o Registrarse
                <% } %>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <% if (session.user) { %>
                  <li><a href="/users/<%= session.user.id%>">Mi Perfil</a></li>
                  <li class="divider"></li>
                  <li><a href="/logout">Salir</a></li>
              <% } else { %>
                  <li><a href="/login?redir=/posts">Entrar</a></li>
                  <li class="divider"></li>
                  <li><a href="/users/new">Registarse</a></li>
              <% } %>
            </ul>
          </div>

          <div class="nav-collapse">
            <ul class="nav">
              <li><a href="/"><i class='icon-home icon-white'></i> Home</a></li>
              <li><a href="/posts"><i class='icon-tasks icon-white'></i> Posts</a></li>
              <li><a href="/users"><i class='icon-user icon-white'></i> Usuarios</a></li>
              <% if (session.user) { %>
                <li><a href="/users/<%=session.user.id%>/favourites"><i class='icon-star icon-white'></i> Favoritos</a></li>
              <% } %>
            </ul>
          </div><!--/.nav-collapse -->

          <% if ( cont )  { %>
          <p class="count"> Contador de visitas: <%= cont %></p>
          <% } %>

          <form action="/posts/search" method="GET">
            <input name="item" value="Buscar por..."/>
            <input type="submit" value="Enviar"/>
          </form>

        </div>
      </div>
    </div>


    <div class="container-fluid">
      <div class="row-fluid">

        <div class="span10">

          <% var flash = flash() %>

          <% if (flash.info) { %>
            <div class="row">
              <div class="span12">
                <div class='alert alert-info'>
                  <a class="close" data-dismiss="alert" href="#">×</a>
                  <h3 class='alert-heading'>Información de interés:</h3>
                  <ul>
                    <% for (var i in flash.info) { %>
                      <li> <%= flash.info[i] %> </li>
                    <% } %>
                  </ul>
                </div>
              </div>
            </div>
          <% } %>


          <% if (flash.success) { %>
            <div class="row">
              <div class="span12">
                <div class='alert alert-success'>
                  <a class="close" data-dismiss="alert" href="#">×</a>
                  <h3 class='alert-heading'>Tareas completadas con éxito:</h3>
                  <ul>
                    <% for (var i in flash.success) { %>
                      <li> <%= flash.success[i] %> </li>
                    <% } %>
                  </ul>
                </div>
              </div>
            </div>
          <% } %>


          <% if (flash.error) { %>
            <div class="row">
              <div class="span12">
                <div class='alert alert-error'>
                  <a class="close" data-dismiss="alert" href="#">×</a>
                  <h3 class='alert-heading'>Errores encontrados:</h3>
                  <ul>
                    <% for (var i in flash.error) { %>
                      <li> <%= flash.error[i] %> </li>
                    <% } %>
                  </ul>
                </div>
              </div>
            </div>
          <% } %>

          <div class="row-fluid">
            <div class="span12">
              <%- body %>
            </div>
          </div>
  
        </div><!--/span10-->
      </div>
    </div><!--/.fluid-container-->

</body>
</html>
